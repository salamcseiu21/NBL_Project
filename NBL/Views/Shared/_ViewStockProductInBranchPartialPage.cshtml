@model IEnumerable<NblClassLibrary.Models.ViewModels.ViewProduct>
@{
    ViewBag.Title = "Stock";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}
<section class="content">

    <h3 class="text-center text-green" style="font-weight:bold;font-size:20px;margin:0;padding:0;">Prodcut In Stock</h3>
    <table id="table_product_list_in_stock" class="display table table-striped table-bordered" style="border:1px solid black">

        <thead>
            <tr>
                <th class="text-center">Product Name</th>
                <th class="text-center">Category </th>
                <th class="text-center">Account Code  </th>
                <th class="text-center">Stock Qty</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td class="text-center">@item.ProductCategoryName</td>
                    <td class="text-center">@item.SubSubSubAccountCode</td>

                    <td class="text-right">@item.StockQuantity</td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <th class="text-center">Product Name</th>

                <th class="text-center">Category </th>
                <th class="text-center">Account Code  </th>
                <th class="text-center">Stock Qty</th>
            </tr>
        </tfoot>
    </table>

</section>


<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>
<script>

    $('#table_product_list_in_stock').DataTable({
        "lengthMenu": [[15, 30, 50, -1], [15, 30, 50, "All"]]
    });

</script>
