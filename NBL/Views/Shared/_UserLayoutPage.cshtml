                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/@user.EmployeeImage" class="user-image" alt="User Image">
                                <span class="hidden-xs">
                                    @{
                                        @user.EmployeeName
                                            
                                    }
                                </span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="~/@user.EmployeeImage" class="img-circle" alt="User Image">
                                    <p style="font-weight: bolder">@user.EmployeeName</p>
                                    <p>@user.DesignationName</p>
                                </li>

                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        @Html.ActionLink(" Profile", "ViewEmployeeProfile", "Home", new { id = user.EmployeeId }, new { @class = "btn btn-info btn-flat" })
                                    </div>
                                    <div class="pull-right">
                                        @Html.ActionLink("Sign out", "Logout", "LogIn", new { area = "" }, new { @class = "btn btn-info" })
                                       
                                    </div>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar" style="position: fixed;">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/@user.EmployeeImage" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p style="font-weight: bolder">
                            @user.EmployeeName
                        </p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>

                <!-- sidebar menu: : style can be found in sidebar.less -->

                @switch (user.Roles)
                {
                    case "Admin":
                        Html.RenderPartial("~/Areas/Admin/Views/Shared/_MenuPartialPage.cshtml");
                        break;
                    case "Super":
                        Html.RenderPartial("~/Areas/SuperAdmin/Views/Shared/_MenuPartialPage.cshtml");
                        break;
                    case "User":
                        Html.RenderPartial("~/Areas/Sales/Views/Shared/_MenuPartialPage.cshtml");
                        break;
                    case "Nsm":
                        Html.RenderPartial("~/Areas/Nsm/Views/Shared/_MenuPartialPage.cshtml");
                        break;
                    case "Distributor":
                        Html.RenderPartial("~/Areas/Manager/Views/Shared/_MenuPartialPage.cshtml");
                        break;
                    case "Factory":
                        Html.RenderPartial("~/Areas/Factory/Views/Shared/_MenuPartialPage.cshtml");
                        break;
                    case "Accounts":
                        Html.RenderPartial("~/Areas/Accounts/Views/Shared/_MenuPartialPage.cshtml");
                        break;
                    case "AccountExecutive":
                        Html.RenderPartial("~/Areas/AccountExecutive/Views/Shared/_MenuPartialPage.cshtml");
                        break;
                    case "Editor":
                        Html.RenderPartial("~/Areas/Editor/Views/Shared/_MenuPartialPage.cshtml");
                        break;
                    case "Management":
                        Html.RenderPartial("~/Areas/Management/Views/Shared/_MenuPartialPage.cshtml");
                        break;
                    case "Corporate":
                        Html.RenderPartial("~/Areas/Corporate/Views/Shared/_MenuPartialPage.cshtml");
                        break;

                }

            </section>

            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="background-color:white;">
            <!-- Content Header (Page header) -->
            <section class="content-header" style="margin: 0; padding: 0;">
                <div class="row" style="background-color: #94CF96; font-weight: bolder; padding: 5px;">
                    <div class="col-md-6">
                        @*<h2 style="margin: 0; padding: 0;">@company.CompanyName</h2>*@
                        @Html.Raw(branch.GetFullInformation())
                    </div>
                    <div class="col-md-6 text-right">

                        <img src="~/Images/@company.Logo" alt="Company_Logo" />
                    </div>
                </div>
            </section>
            <div class="body-content" style="margin: 0; padding: 0;">
                <style>
                    .ui-autocomplete {
                        max-height: 250px;
                        overflow-y: auto;
                        /* prevent horizontal scrollbar */
                        overflow-x: hidden;
                    }

                    html .ui-autocomplete {
                        height:250px;
                    }

                     .ui-tooltip, .arrow:after {
                        background: orange;
                        border: 1px solid white;
                    }

                    .ui-tooltip {
                        padding: 10px 20px;
                        color: white;
                        border-radius: 20px;
                        font: bold 14px "Helvetica Neue", Sans-Serif;
                        box-shadow: 0 0 7px black;
                    }

                    .arrow {
                        width: 70px;
                        height: 16px;
                        overflow: hidden;
                        position: absolute;
                        left: 50%;
                        margin-left: -35px;
                        bottom: -16px;
                    }

                        .arrow.top {
                            top: -16px;
                            bottom: auto;
                        }

                        .arrow.left {
                            left: 20%;
                        }

                        .arrow:after {
                            content: "";
                            position: absolute;
                            left: 20px;
                            top: -20px;
                            width: 25px;
                            height: 25px;
                            box-shadow: 6px 5px 9px -9px black;
                            -webkit-transform: rotate(45deg);
                            -ms-transform: rotate(45deg);
                            transform: rotate(45deg);
                        }

                        .arrow.top:after {
                            bottom: -20px;
                            top: auto;
                        }
                        .content {
                            padding: 5px;
                        }
                </style>
            

                <!-- Main content -->
                <section class="content" id="bodyContent" style="margin: 0; padding: 0;">
                    @RenderBody()
                </section>
                <!-- /.content -->
            </div>


