
@using NBL.BLL
@using NBL.Models.ViewModels
@{
    var user = (ViewUser)Session["user"];
    var branchId = Convert.ToInt32(Session["BranchId"]);
    BranchManager aBranch = new BranchManager();
    var branch = aBranch.GetBranchById(branchId);
    var companyId = Convert.ToInt32(Session["CompanyId"]);
    CompanyManager aCompany = new CompanyManager();
    var company = aCompany.GetCompanyById(companyId);

    string roleName = "";
    string areas = "";
    if (user.Roles.Equals("Super"))
    {
        roleName = "Super Admin";
        areas = "superadmin";
    }
    else if (user.Roles.Equals("Admin"))
    {
        roleName = "Admin";
        areas = "admin";
    }
    else if (user.Roles.Equals("User"))
    {
        roleName = "Sales";
        areas = "sales";
    }
    else if (user.Roles.Equals("Nsm"))
    {
        roleName = "NSM";
        areas = "nsm";
    }
    else if(user.Roles.Equals("Distributor"))
    {
        roleName = "Distributor";
        areas = "manager";
    }
    else if(user.Roles.Equals("Factory"))
    {
        roleName = "Factory";
        areas = "factory";
    }
    else if (user.Roles.Equals("Accounts"))
    {
        roleName = "Accounts";
        areas = "accounts";
    }
    else if (user.Roles.Equals("AccountExecutive"))
    {
        roleName = "Account Executive";
        areas = "accountexecutive";
    }
    else if(user.Roles.Equals("Editor"))
    {
        roleName = "Editor";
        areas = "editor";
    }
    else if (user.Roles.Equals("Management"))
    {
        roleName = "Management";
        areas = "management";
    }
    else if (user.Roles.Equals("Corporate"))
    {
        roleName = "Corporate";
        areas = "corporate";
    }

}
