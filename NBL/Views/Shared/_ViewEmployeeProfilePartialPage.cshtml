@model ViewEmployee
@{
    ViewBag.Title = "Employee Profile";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}
<!-- Main content -->
<section class="content" style="background-color: aliceblue;">
    <h3 class="text-center text-green headingStyle">Employee Profile</h3>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <!-- Profile Image -->
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <img class="profile-user-img img-responsive img-circle" src="~/@Model.EmployeeImage" alt="Employee Image" title="@Model.EmployeeName">
                    <br/>
                    <img class="profile-user-img img-responsive" src="~/@Model.EmployeeSignature" alt="Employee Signature ">
                    <p class="text-muted text-center">@Model.DesignationName</p>
                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>Joining Date</b> <a class="pull-right">@Model.JoiningDate.ToString("D")</a>
                        </li>
                    </ul>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
            <!-- About Me Box -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">About</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <strong><i class="fa fa-book"></i> Contact Details</strong>
                    <p class="text-muted">
                        <strong>
                            Phone : @Model.Phone<br/>
                            Alternate Phone: @Model.AlternatePhone<br/>
                            E-mail : @Model.Email<br/>
                            NID : @Model.NationalIdNo<br/>
                        </strong>
                    </p>
                    <hr>
                    <strong><i class="fa fa-map-marker margin-r-5"></i> Address</strong>
                    <p class="text-muted">@Model.PresentAddress</p>

                    <hr>
                    <strong><i class="fa fa-file-text-o margin-r-5"></i> Notes</strong>
                    <p>@Model.Notes</p>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
        <div class="col-md-9">
