@using NblClassLibrary.BLL
@model IEnumerable<NblClassLibrary.Models.ViewModels.ViewOrder>
@{
    ViewBag.Title =ViewBag.Heading;
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content">
    <h3 class="headingStyle text-center text-green">@Html.Raw(ViewBag.Heading)</h3>
    <table id="table_Order_list" class="display table table-bordered responsive" style="border: 1px solid black">

        <thead>
        <tr>
            <th>Order Slip No</th>
            <th>Client Info</th>
            <th class="text-center">Order Date</th>
            <th class="text-right">Amount (&#2547;)</th>
            <th class="text-right">Vat (&#2547;)</th>
            <th class="text-right">Discount (&#2547;)</th>
            <th class="text-right">S.D (&#2547;)</th>
            <th class="text-right">Net Amount (&#2547;)</th>
            <th class="text-right">Qty</th>
            <th class="text-center">Status</th>
            <th class="text-center">Action</th>
        </tr>
        </thead>

        <tbody>

        @foreach (var item in Model)
        {
            <tr>

                <td>@item.OrderSlipNo</td>
                <td>
                    @{


                        ClientManager clientManager = new ClientManager();
                        var aClient = clientManager.GetClientById(item.ClientId);
                        @Html.Raw(aClient.GetBasicInformation())
                    }
                </td>
                <td class="text-center">

                    @item.SysDate.ToShortTimeString(),@item.SysDate.ToString("dd-MMM-yyyy")
                </td>
                <td class="text-right">
                    @(item.Amounts - item.Vat)
                </td>
                <td class="text-right">
                    @item.Vat
                </td>
                <td class="text-right">
                    @item.Discount
                </td>
                <td class="text-right">
                    @item.SpecialDiscount
                </td>
                <td class="text-right">
                    @item.NetAmounts
                </td>
                <td class="text-right">
                    @item.Quantity
                </td>
                <td class="text-center">
                    @{
                        <label> </label>

                        switch (item.Status)
                        {
                            case 0:
                                <label class="text-danger"><i class="fa fa-spinner"></i> @item.StatusDescription</label>
                                break;
                            case 1:
                                <label class="text-success"><i class="fa fa-spinner"></i> @item.StatusDescription</label>
                                break;
                            case 2:
                                <label class="text-success"><i class="fa fa-spinner"></i> @item.StatusDescription</label>
                                break;
                            case 3:
                                <label class="text-orange"> @item.StatusDescription</label>
                                break;
                            case 4:<label class="text-green"><i class="fa fa-check-circle-o"></i> @item.StatusDescription</label>
                                break;
                            default:
                                <label style="color: red;" title="@item.ResonOfCancel"><i class="fa fa-times"></i> @item.StatusDescription</label>
                                break;
                        }
                    }

                </td>
                <td class="text-center">
                    @*@Html.ActionLink(" Details", "OrderDetails", "Home", new {id = item.OrderId}, new {@class = "fa fa-eye"})*@
                    <button type="button" class="btn btn-success btn-sm" value="@item.OrderId" onclick="ViewOrderDetails(this)"><i class="fa fa-eye"></i> Details</button>
                </td>
            </tr>
        }

        </tbody>
        <tfoot>
        <tr>
            <th>Order Slip No</th>
            <th>Client Info</th>
            <th class="text-center">Order Date</th>
            <th class="text-right">Amount (&#2547;)</th>
            <th class="text-right">Vat (&#2547;)</th>
            <th class="text-right">Discount (&#2547;)</th>
            <th class="text-right">S.D (&#2547;)</th>
            <th class="text-right">Net Amount (&#2547;)</th>
            <th class="text-right">Qty</th>
            <th class="text-center">Status</th>
            <th class="text-center">Action</th>
        </tr>
        </tfoot>
    </table>
    <div id="showOrderDetailsModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color: aquamarine">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Order Details</h4>
                </div>
                <div id="modalBody" class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</section>
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>
<script>

    $('#table_Order_list').DataTable({
        "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
        "order": [[1, "desc"]]
    });

</script>

<script>

    function ViewOrderDetails(orderId) {

        $.ajax({
            type: "POST",
            url: "@Url.Action("ViewOrderDetails", "Common", new { area = "" })",
            data: { orderId: orderId.value },
            success: function (response) {
                $('#modalBody').html(response);
                $('#showOrderDetailsModal').modal('show');
            }
        });
    }

</script>
