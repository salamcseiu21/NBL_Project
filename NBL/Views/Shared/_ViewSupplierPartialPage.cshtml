
@model IEnumerable<NblClassLibrary.Models.Supplier>
@{
    ViewBag.Title = "Supplier";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}
<section class="content">
    <h3 class="text-center text-green headingStyle">Supplier List</h3>
    <table id="table_supplier_list" class="display table table-bordered" style="border:1px solid black">


        <thead>
        <tr>
            <th>Company Name</th>
            <th>Contact Person</th>
            <th>Address</th>
            <th>City</th>
        </tr>
        </thead>
        <tbody>

        @foreach (var item in Model)
        {
            <tr>

                <td>@item.CompanyName</td>
                <td>@item.ContactPersonName</td>
                <td>@item.Address</td>
                <td>@item.City</td>
            </tr>
        }

        </tbody>
        <tfoot>
        <tr>
            <th>Company Name</th>
            <th>Contact Person</th>
            <th>Address</th>
            <th>City</th>
        </tr>
        </tfoot>
    </table>

</section>


<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>

<script>

        $('#table_supplier_list').DataTable({
            "lengthMenu": [[10, 20, 50, -1], [10, 20, 50, "All"]]
        });

</script>

