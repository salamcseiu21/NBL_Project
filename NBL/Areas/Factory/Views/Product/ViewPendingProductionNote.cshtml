@model IEnumerable<NblClassLibrary.Models.ViewModels.ViewProductionNoteModel>
@{
    ViewBag.Title = "Pending Production Note";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content">
    <h3 class="text-center text-green headingStyle">Pending Production Notes</h3>
    <table id="table_production_note_list" class="display responsive table-bordered" style="border: 1px solid;width: 100%">
        <thead>
        <tr>
            <th>
                Production Note no
            </th>
            <th>
                Production Note Ref
            </th>
            <th>
                Product Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Date
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductionNoteNo</td>
                <td>@item.ProductionNoteRef</td>
                <td>@item.Product.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.SysDateTime.ToString("D")</td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <th>
                Production Note no
            </th>
            <th>
                Production Note Ref
            </th>
            <th>
                Product Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Date
            </th>
        </tr>
        </tfoot>
    </table>
</section>
@section Scripts
{
    <script>
        $("#table_production_note_list").DataTable();
    </script>
}
