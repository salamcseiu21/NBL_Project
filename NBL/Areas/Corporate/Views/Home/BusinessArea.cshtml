@model IEnumerable<NblClassLibrary.Models.ViewModels.ViewBranch>
@{
    ViewBag.Title = "Business Area";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content">
    <h3 class="text-center text-green headingStyle" style="padding: 10px">Business Area</h3>
    <div class="row" style="margin: 0; padding: 0;">
        @foreach (var branch in Model) 
        {
            <div class="col-md-3">
                <div class="panel panel-success">
                    <div class="panel panel-heading" style="margin-bottom: 0;">
                        <h3 class="text-center" style="margin: 0; padding: 0;">Branch: @branch.BranchName</h3>
                    </div>
                    <div class="panel panel-body" style="margin-bottom: 0;min-height: 300px">
                        <u><h4>Region List</h4></u>
                        <ol type="1">

                            @foreach (var region in branch.RegionList.ToList())
                            {

                                <li>
                                    <p style="font-weight: bolder">@region.RegionName</p>
                                </li>

                            }
                        </ol>

                    </div>

                </div>
            </div>
        }
    </div>
</section>
