@model IEnumerable<NblClassLibrary.Models.Order>
@using NblClassLibrary.BLL
@{
    ViewBag.Title = "Pending Order";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
    var clientManager = new ClientManager();
    var userManager = new UserManager();
}
<section class="content">
    <h3 class="text-center text-green headingStyle">Pending Orders</h3>

    <table id="table_pending_order_list" class="table table-bordered" style="border:1px solid black">
        <thead>
            <tr>
                <th>Client Info</th>
                <th>Order Slip No</th>
                <th class="text-center">Amount (&#2547;)</th>
                <th class="text-center">Vat (&#2547;)</th>
                <th class="text-center">Discount (&#2547;)</th>
                <th class="text-center">Special Discount (&#2547;)</th>
                <th class="text-center">Net Amount (&#2547;)</th>
                <th class="text-center">Order Date</th>
                <th class="text-center">Order By</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                var client = clientManager.GetClientDeailsById(item.ClientId);
                var orderBy = userManager.GetUserInformationByUserId(item.UserId);
                <tr>
                   
                    <td>
                       @Html.Raw(client.GetBasicInformation())
                   </td>
                    <td>@item.OrderSlipNo</td>
                    <td class="text-right">@(item.Amounts-item.Vat)</td>
                    <td class="text-right">@item.Vat</td>
                    <td class="text-right">@item.Discount</td>
                    <td class="text-right">@item.SpecialDiscount</td>
                    <td class="text-right">@item.NetAmounts</td>
                    <td class="text-center">@item.SysDate.ToShortTimeString(),@item.SysDate.ToString("dd-MMM-yyyy")</td>
                    <td>@Html.Raw(orderBy.GetBasicInfo())</td>
                    <td class="text-center">
                        @Html.ActionLink(" Cancel", "Cancel", "Order", new { id = item.OrderId }, new { @class = "fa fa-trash" ,style="color:red;"}) &nbsp;|
                        @Html.ActionLink(" View Details", "Edit", "Order", new { area = "Nsm", id = item.OrderId }, new { @class = "fa fa-eye" })
                    </td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <th>Client Info</th>
                <th>Order Slip No</th>
                <th class="text-center">Amount (&#2547;)</th>
                <th class="text-center">Vat (&#2547;)</th>
                <th class="text-center">Discount (&#2547;)</th>
                <th class="text-center">Special Discount (&#2547;)</th>
                <th class="text-center">Net Amount (&#2547;)</th>
                <th class="text-center">Order Date</th>
                <th class="text-center">Order By</th>
                <th class="text-center">Action</th>
            </tr>
        </tfoot>
    </table>
   
</section>
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>
<script>

        $('#table_pending_order_list').DataTable({
        "lengthMenu": [[15, 30, 50, -1], [15, 30, 50, "All"]],
        "oLanguage": {
            "sEmptyTable": "<h4 style='color:green;font-weight:bolder;'>There is no pending order in the list right now !</h4>"
        }
    });

</script>