@model IEnumerable<NblClassLibrary.Models.ViewModels.ViewProduct>

@{
    ViewBag.Title = "Stock";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}
<section class="content">
    <h3 class="text-center text-green" style="font-weight:bold;font-size:20px;margin:0;padding:0;">Prodcut In Stock</h3>
    <table id="table_product_list_in_stock" class="table table table-striped table-bordered" style="border:1px solid black">


        <thead>
            <tr>
                <th>Product Name</th>
                <th class="text-right">Cost Price (&#2547;) </th>
                <th class="text-right">Vat (&#2547;) </th>
                <th class="text-center">Stock</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td class="text-right">@item.CostPrice</td>
                    <td class="text-right">@item.Vat</td>
                    <td class="text-right">@item.StockQuantity</td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <th>Product Name</th>
                <th class="text-right">Cost Price (&#2547;) </th>
                <th class="text-right">Vat (&#2547;) </th>
                <th class="text-center">Stock</th>
            </tr>
        </tfoot>
    </table>



</section>

@section Scripts
{
    <script>

    $('#table_product_list_in_stock').DataTable({
        "lengthMenu": [[15, 30, 50, -1], [15, 30, 50, "All"]]
    });

</script>
}
