@model IEnumerable<NblClassLibrary.Models.ViewModels.ViewClientSummaryModel>
@{
    ViewBag.Title = "Client Summary";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}


<section class="content">
    <h3 class="text-center text-green headingStyle">Client Summary</h3>
    <table class="display table table-bordered" id="table_client_summary" style="border:1px solid black">
        <thead>
        <tr>
            <th>
                Client info
            </th>
            <th class="text-right">
                Total Order
            </th>

            <th class="text-right">
                Debit (&#2547;)
            </th>
            <th class="text-right">
                Credit (&#2547;)
            </th>
            <th class="text-right">
                Outstanding (&#2547;)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.CommercialName<br/>
                <td class="text-right">
                    @client.TotalOrder
                </td>
                <td class="text-right">
                    @client.Debit
                </td>
                <td class="text-right">
                    @client.Credit
                </td>
                <td class="text-right">
                    @(client.Outstanding>0?client.Outstanding:0)
                </td>
            </tr>

        }
        </tbody>
        <tfoot>
        <tr>
            <th>
                Client info
            </th>
            <th class="text-right">
                Total Order
            </th>

            <th class="text-right">
                Debit (&#2547;)
            </th>
            <th class="text-right">
                Credit (&#2547;)
            </th>
            <th class="text-right">
                Outstanding (&#2547;)
            </th>
        </tr>
    </table>
</section>


@section Scripts
{
    <script>

        $('#table_client_summary').DataTable({
            "lengthMenu": [[15, 30, 50, -1], [15, 30, 50, "All"]]
        });

    </script>
}
