@model NBL.Models.Branch
@{
    ViewBag.Title = "Add New Branch";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
    var date = DateTime.Now.Date.ToString("dd-MMMM-yyyy");
}

<section class="content">
    @using (Html.BeginForm("AddBranch", "Branch", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2 class="text-center text-green" style="margin-top: 0;">Add New Branch</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p class="text-center">
                @if (TempData["message"] != null)
                {
                    @TempData["message"]
                }
            </p>

            <div class="col-md-6 col-md-offset-3">
                <div class="form-group">
                    @Html.LabelFor(m=>m.BranchName,new {@class="control-label col-md-3"})
                    <div class="col-md-9">
                        @Html.TextBoxFor(m=>m.BranchName,new {@class="form-control",placeholder="Enter bracnh name---"})
                       @Html.ValidationMessageFor(m=>m.BranchName,"",new {@class="text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.Title,new {@class="control-label col-md-3"})
                    <div class="col-md-9">
                        @Html.TextBoxFor(m=>m.Title,new {@class="form-control",placeholder="Enter branch title...."})
                        @Html.ValidationMessageFor(m=>m.Title,"",new {@class="text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.BranchAddress,new {@class="control-label col-md-3"})
                    <div class="col-md-9">
                        @Html.TextAreaFor(m=>m.BranchAddress,new {@class="form-control",rows=2,placeholder = "Branch Address" ,style= "resize: none" })
                        @Html.ValidationMessageFor(m=>m.BranchAddress,"",new {@class="text-danger"})
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(m=>m.BranchPhone,new {@class="control-label col-md-3"})
                    <div class="col-md-9">
                     @Html.TextBoxFor(m=>m.BranchPhone,new {@class="form-control",placeholder="Branch Phone ..."})
                      @Html.ValidationMessageFor(m=>m.BranchPhone,"",new {@class="text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.BranchEmail,new {@class="control-label col-md-3"})
                    <div class="col-md-9">
                        @Html.TextBoxFor(m=>m.BranchEmail,new {@class="form-control",placeholder="E-mail address.."})
                        @Html.ValidationMessageFor(m=>m.BranchEmail,"",new {@class="text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.BranchOpenigDate,new {@class="control-label col-md-3"})
                    <div class="col-md-9">
                       @Html.TextBoxFor(m=>m.BranchOpenigDate,new {@class="form-control",Value=date})
                       @Html.ValidationMessageFor(m=>m.BranchOpenigDate,"",new {@class="text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        @Html.ActionLink("Cancel", "ViewBranch", "Branch", new { area = "Editor" }, new { @class = "btn btn-danger" })
                        <input type="submit" value="Save" class="btn btn-primary"/>
                    </div>
                </div>

            </div>

        </div>
    }
</section>
@section Scripts
{
    
    <script>
        $(function () {

            $("#BranchOpenigDate").datepicker({ dateFormat: 'dd-MM-yy' });

        } );
    </script>
}
