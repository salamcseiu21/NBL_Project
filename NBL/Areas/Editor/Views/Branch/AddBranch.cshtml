@model NblClassLibrary.Models.Branch
@{
    ViewBag.Title = "Add New Branch";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
    var date = DateTime.Now.Date.ToString("dd-MMMM-yyyy");
}

<section class="content">
    @using (Html.BeginForm("AddBranch", "Branch", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2 class="text-center text-green" style="margin-top: 0;">Add New Branch</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p class="text-center">
                @if (TempData["message"] != null)
                {
                    @TempData["message"]
                }
            </p>

            <div class="col-md-6 col-md-offset-3">
                <div class="form-group">
                    <label class="control-label col-md-3">Branch Name : </label>
                    <div class="col-md-9">
                        <input type="text" name="BranchName" id="BranchName" class="form-control" placeholder="Enter Branch Name.." required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Title : </label>
                    <div class="col-md-9">
                        <input type="text" name="Title" id="Title" class="form-control" placeholder="Enter Branch Title.." required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="BranchAddress" class="control-label col-md-3">Address:</label>
                    <div class="col-md-9">

                        <textarea id="BranchAddress" name="BranchAddress" class="form-control" placeholder="Branch Address" required rows="2" style="resize:none"></textarea>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="BranchPhone" class="control-label col-md-3">Phone :</label>
                    <div class="col-md-9">

                        <input type="text" id="BranchPhone" name="BranchPhone" class="form-control" placeholder="Phone" required/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="BranchEmail" class="control-label col-md-3">E-mail :</label>
                    <div class="col-md-9">

                        <input type="text" id="BranchEmail" name="BranchEmail" class="form-control" placeholder="E-mail Address" required/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="BranchOpenigDate" class="control-label col-md-3">Opening Date</label>
                    <div class="col-md-9">
                        <input type="text" id="BranchOpenigDate" name="BranchOpenigDate" value="@date" class="form-control" />
                    </div>
                </div>
             

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        @Html.ActionLink("Cancel", "ViewBranch", "Branch", new { area = "Editor" }, new { @class = "btn btn-danger" })
                        <input type="submit" value="Save" class="btn btn-primary"/>
                    </div>
                </div>



            </div>

        </div>
    }
</section>

<script>
    $(function () {

        $("#BranchOpenigDate").datepicker({ dateFormat: 'dd-MM-yy' });

    } );
</script>