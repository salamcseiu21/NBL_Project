@model IEnumerable<NblClassLibrary.Models.EmployeeType>
@{
    ViewBag.Title = "Employee Type List";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.5.2/css/buttons.dataTables.min.css" />
    <div class="text-center">

        @Html.ActionLink("Add New Employee Type", "Add Employee Type", "EmployeeType", new { area = "Editor" }, new { @class = "btn btn-info" })
    </div>
    <table id="table_EmployeeType_list" class="display" style="border:1px solid black">
        <caption class="text-center text-green" style="font-weight:bold;">Employee Type List</caption>

        <thead>
            <tr>
                <th>Employee Type</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.EmployeeTypeName</td>

                    <td class="text-center">
                        @Html.ActionLink("Details", "Details", new { id = item.EmployeeTypeId }) 
                    </td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <th>EmployeeType</th>

                <th class="text-center">Action</th>
            </tr>
        </tfoot>
    </table>


    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>

    <script>

        $('#table_EmployeeType_list').DataTable({
            "lengthMenu": [[15, 25, 50, -1], [15, 25, 50, "All"]]
        });

    </script>


</section>
