@model NblClassLibrary.Models.SummaryModel
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-aqua">&#2547;</span>
                <div class="info-box-content">

                    <span class="info-box-text">Total Pending Order</span>
                    <span class="info-box-number">

                        <a href="@Url.Action("PendingOrder", "Order")">
                            
                            <span style="font-size:15px" class="label label-warning"><label id="PendingOrders"></label></span>
                        </a>
                       

                    </span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-aqua">&#2547;</span>
                <div class="info-box-content">
                    <span class="info-box-text">Sales (@DateTime.Now.ToString("MMMM"))</span>
                    <span class="info-box-number">
                        <span class="info-box-number">
                            @Model.Orders.ToList().FindAll(n => n.OrderDate.Month.Equals(DateTime.Now.Month)).Count

                        </span>
                    </span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <!-- fix for small devices only -->
        <div class="clearfix visible-sm-block"></div>
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-aqua">&#2547;</span>
                <div class="info-box-content">
                    <span class="info-box-text">Sales (Yesterday)</span>
                    <span class="info-box-number">

                        @Model.Orders.ToList().FindAll(n => n.OrderDate.Month.Equals(DateTime.Now.Month) && n.OrderDate.Day.Equals(DateTime.Now.Date.Day - 1)).Count

                    </span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <span class="info-box-icon bg-aqua">&#2547;</span>
                <div class="info-box-content">
                    <span class="info-box-text">Sales (Today)</span>
                    <span class="info-box-number">
                        @Model.Orders.ToList().FindAll(n => n.OrderDate.Month.Equals(DateTime.Now.Month) && n.OrderDate.Day.Equals(DateTime.Now.Date.Day)).Count
                    </span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
    </div>

   
 
<script>
var myVar;

function setIntervalToGetPendingOrdersFunction() {
    myVar = setInterval(getPendingOrders, 1000);
}

function getPendingOrders() {
    $.ajax({
        type: "GET",
        url: '@Url.Action("GetPendingOrders", "Order")',
        contentType: "application/json; charset=utf-8",
        success: function (data) {
            $("#PendingOrders").text(data);
        }
    });
}

    window.onload = setIntervalToGetPendingOrdersFunction;
    </script>

</section>

