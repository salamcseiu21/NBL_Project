@using NBL.Models
@model Designation
 

@{
    ViewBag.Title = "Update Designation Info";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}

<section class="content" style="margin:0;padding:0;">
    <h3 class="text-center text-green">Update Designation Information</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="text-center text-danger">
                @if (TempData["Error"] != null)
                {
                    @Html.Raw(TempData["Error"])
                }
            </div>
            <hr />
            @Html.HiddenFor(model => model.DesignationId)

            <div class="form-group">
               
                @Html.LabelFor(m=>m.DepartmentId,new {@class="control-label col-md-2"})
                <div class="col-md-10">
                    @Html.DropDownListFor(m=>m.DepartmentId,null,"--Select--",new {@class="form-control"})
                    @Html.ValidationMessageFor(m=>m.DepartmentId,"",new {@class="text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m=>m.DesignationCode,new {@class="control-label col-md-2"})
                <div class="col-md-10">
                    @Html.TextBoxFor(m=>m.DesignationCode,new {@class="form-control", placeholder = "Enter designation code" })
                    @Html.ValidationMessageFor(m=>m.DesignationCode,"",new {@class="text-danger"})
                </div>
            </div>
            <div class="form-group">
                <label for="DesignationName" class="control-label col-md-2">Designation Name</label>

                <div class="col-md-10">
                    <input type="text" id="DesignationName" name="DesignationName" placeholder="Enter designation name" value="@Model.DesignationName" required class="form-control" />

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Back to List", "DesignationList", "Designation", new { area = "Editor" }, new { @class = "btn btn-info" })
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

</section>
