
@using NBL.Areas.Accounts.Models
@model IEnumerable<Voucher>
@{
    ViewBag.Title = "Journals";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";
}
<section class="content">
    <h3 class="text-center text-green headingStyle">All Vouchers</h3>
    <table id="table_Credit_Voucher" class="table table-bordered" style="border: 1px solid black">

        <thead>
        <tr>
            <th class="text-center">Voucher Name </th>
            <th class="text-center">Tramsaction Type </th>
            <th class="text-center">Date </th>
            <th class="text-right" style="width: 10%">Amount (&#2547;)</th>
            <th class="text-center">Action</th>
        </tr>
        </thead>

        <tbody>

        @foreach (var item in Model)
        {

            <tr>

                <td>@item.VoucherName</td>
                <td class="text-center">
                    @{
                        if (item.TransactionTypeId == 1)
                        {
                            <label>Cash</label>
                        }
                        else
                        {
                            <label>Bank</label>
                        }
                    }
                </td>
                <td class="text-center">@item.VoucherDate.ToString("dd-MMM-yyyy")</td>
                <td class="text-right">@item.Amounts</td>
                <td class="text-center">
                    @Html.ActionLink(" Details", "VoucherDetails", "Account", new {area = "AccountExecutive", id = item.VoucherId}, new {@class = "fa fa-eye"})
                </td>
            </tr>
        }

        </tbody>
        <tfoot>
        <tr>
            <th class="text-center">Voucher Name </th>
            <th class="text-center">Tramsaction Type </th>
            <th class="text-center">Date </th>
            <th class="text-right" style="width: 10%">Amount (&#2547;)</th>
            <th class="text-center">Action</th>
        </tr>
        </tfoot>
    </table>

</section>
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>


<script>

    $('#table_Credit_Voucher').DataTable({
        "lengthMenu": [[10, 20, 50, -1], [10, 20, 50, "All"]],
        "order": [[1, "desc"]],
        "oLanguage": {
            "sEmptyTable": "<h4 style='color:green;font-weight:bolder;'>There is no vouchers to approve right now !</h4>"
        }
    });

</script>

