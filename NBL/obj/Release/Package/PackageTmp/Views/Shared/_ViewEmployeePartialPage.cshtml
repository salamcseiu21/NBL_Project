@model IEnumerable<NBL.Models.ViewModels.ViewEmployee>
@{
    ViewBag.Title = "Employee List";
    Layout = "~/Views/Shared/_UserLayoutPage.cshtml";

}

<section class="content">
    <h3 class="text-center text-green headingStyle">Employee List</h3>
    <table id="table_employee_list" class="display table table-bordered" style="border:1px solid black">

        <thead>
            <tr>

                <th class="text-center">Basic Information</th>
                <th class="text-center">Contact Info</th>
               
                <th class="text-center">View</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>

                    <td class="text-center">
                        <img class="img-circle" src="~/@item.EmployeeImage" alt="Employee Image" title="@item.EmployeeName" width="60" height="60"><br />
                        @Html.Raw(item.GetBasicInformation())
                    </td>
                    <td>@Html.Raw(item.GetContactInformation())</td>

                    <td class="text-center">
                        @Html.ActionLink(" Profile", "ViewEmployeeProfile", "Home", new { id = item.EmployeeId }, new { @class = "fa fa-eye" })
                    </td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>

                <th class="text-center">Basic Information</th>
                <th class="text-center">Contact Info</th>

                <th class="text-center">View</th>
            </tr>
        </tfoot>
    </table>
</section>

<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>


<script>

    $('#table_employee_list').DataTable({
        "lengthMenu": [[5, 25, 50, -1], [5, 25, 50, "All"]]
    });

</script>

